	xr --server tcp:0:80 --backend 10.1.2.12:5000 --backend 10.1.2.13:5000 --backend 10.1.2.14:5000 --backend 10.1.2.15:5000 --web-interface 0:8001 -d first-available &amp;
	service apache2 start;
